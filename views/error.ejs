<!-- Error page. When error happens, this page displays -->

<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <p>
                    <!--If it's production env, don't show stack(codes)-->
                    <!--In order to run app in production mode, you need the following line-->
                    <!--NODE_ENV=production node app.js-->
                    <% if (process.env.NODE_ENV !== "production") { %>
                        <%= err.stack %>
                            <% } %>
                </p>
            </div>
        </div>
    </div>